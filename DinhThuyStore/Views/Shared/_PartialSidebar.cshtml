<div class="sidebar">
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="~/Content/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="#" class="d-block">@Session["username"]</a>
        </div>
    </div>
    <nav class="mt-2 user-panel ">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item">
                <a href="/" class="nav-link">
                    <i class="nav-icon fa-solid fa-home"></i>
                    <p>
                        Trang chủ
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="/category" class="nav-link">
                    <i class="nav-icon fa-solid fa-list"></i>
                    <p>
                        Quản lý danh mục
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="/product" class="nav-link">
                    <i class="nav-icon fa-solid fa-box"></i>
                    <p>
                        Quản lý sản phẩm
                    </p>
                </a>
            </li>
            @if (Session["role"].ToString() != "Nhân viên")
            {
                <li class="nav-item">
                    <a href="/account" class="nav-link">
                        <i class="nav-icon fa-solid fa-user"></i>
                        <p>
                            Quản lý tài khoản
                        </p>
                    </a>
                </li>
            }
        </ul>
    </nav>
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item">
                <a style="border: 1px solid #343a40" href="/logout" class="nav-link btn btn-danger text-dark text-left">
                    <i class="nav-icon fa-solid fa-power-off"></i>
                    <p>
                        Đăng xuất
                    </p>
                </a>
            </li>
        </ul>
    </div>
</div>